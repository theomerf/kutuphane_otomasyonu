  "components": {
    "schemas": {
      "AccountForLoginDto": {
        "required": [
          "password",
          "userName"
        ],
        "type": "object",
        "properties": {
          "userName": {
            "minLength": 3,
            "type": "string"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          },
          "rememberMe": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "AccountForRegistrationDto": {
        "required": [
          "birthDate",
          "email",
          "firstName",
          "lastName",
          "password",
          "phoneNumber",
          "userName"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 20,
            "minLength": 2,
            "type": "string"
          },
          "lastName": {
            "maxLength": 20,
            "minLength": 2,
            "type": "string"
          },
          "userName": {
            "maxLength": 20,
            "minLength": 3,
            "type": "string"
          },
          "password": {
            "maxLength": 20,
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "phoneNumber": {
            "minLength": 1,
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CartDtoForUpdate": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "accountId": {
            "type": "string",
            "nullable": true
          },
          "cartLines": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CartLineDtoForInsertion"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CartLineDtoForInsertion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "bookId": {
            "type": "integer",
            "format": "int32"
          },
          "cartId": {
            "type": "integer",
            "format": "int32"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "QuantityUpdateDto": {
        "type": "object",
        "properties": {
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ReservationDtoForCreation": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string",
            "nullable": true
          },
          "seatId": {
            "type": "integer",
            "format": "int32"
          },
          "timeSlotId": {
            "type": "integer",
            "format": "int32"
          },
          "reservationDate": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SeatDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "seatNumber": {
            "type": "integer",
            "format": "int32"
          },
          "location": {
            "type": "string",
            "nullable": true
          },
          "floor": {
            "type": "integer",
            "format": "int32"
          },
          "isAvailable": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "TimeSlotDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "startTime": {
            "type": "string",
            "format": "time"
          },
          "endTime": {
            "type": "string",
            "format": "time"
          }
        },
        "additionalProperties": false
      },
      "TokenDto": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "nullable": true
          },
          "refreshToken": {
            "type": "string",
            "nullable": true
          },
          "userName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "Please enter a valid token",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
